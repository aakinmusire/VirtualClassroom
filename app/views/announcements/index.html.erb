<h1> View <%= pluralize(@announcements.count, "Announcement")%></h1>
<table>
	<thead>
       <tr>
       	  <th>Title</th>
       	  <th>Body</th>
       	  <th>Actions</th>

       </tr>
	</thead>
	<tbody>
		<% @announcements.each do |announcement| %>
		<tr>
			<td><%= announcement.title %></td>
			<td><%= announcement.body %></td>
			<td><a href="/announcements/<%= announcement.id %>">Show</a> |
				<a href="/announcements/<%= announcement.id %>/edit">Edit</a> |
				<a href="/announcements/<%= announcement.id %>" data-method="delete"
					data-confirm="Are you sure?">Delete</a>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<a href="/actors/new">Create Announcements</a>