<h1>Edit <%= @announcement.title %> </h1>
<form action="/announcements/<%= @announcement.id %> " method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	 <div class="form-group">
		<label>Title:</label>
		<input type="text" name="announcement[title]" value="<%= @announcement.title %>" class="form-control">
	</div>
	 <div class="form-group">
		<label>Body:</label>
		<input type= "text" name="announcement[body]" value="<%= @announcement.body %>" class="form-control">
	</div>
	<input type ="submit" value="Update" class="btn btn-primary">
</form>
<% if flash[:errors] %>
	<%flash[:errors].each do |e| %>
	<div class="alert alert-danger"><%= e %></div>
	<% end %>
<% end %>